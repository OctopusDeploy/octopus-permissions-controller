  "version": "0.2.0",
  "configurations": [
    {
      "name": "Build and Run octopus-permissions-controller",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd",
      "cwd": "${workspaceFolder}",
      "args": [
        "--webhook-cert-path",
        "./certificates",
        "--metrics-bind-address=:8444",
        "--metrics-secure=false"
      ]
    },
    {
      "name": "Run E2E Tests",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/test/e2e",
      "cwd": "${workspaceFolder}/test/e2e",
      "env": {
        "KIND_CLUSTER": "octopus-permissions-controller-test-e2e"
      }
    }
  ]
}
